{%extends 'templates/app.twig'%}
{% block head %}
<link rel="stylesheet" href= "{{baseUrl}}/resources/css/update/recover_pass.css">
{% endblock %}
{% block content %}
<div class="row" id="margin">
       <div class="col-md-4 col-md-offset-4">
           <div class="panel panel-default">
             <div class="panel-body">
               <h2>Внеси Емаил</h2>
           </div>
           <div class="panel-body">
        <form action="{{path_for('password.recover')}}" method="post" autocomplete="off">
        <div class="form-group">
          <input type="text"  id="email" placeholder="Внеси Емаил" name="email" />
          {% if errors.first('email') %}
         <span class="help-block">{{errors.first('email')}}</span>
         {% endif %}
        </div>
      {{ csrf_field() | raw }}
    <button type="submit" class="hvr-buzz-out">Продолжи</button>
</form>
</div>
      </div>
      </div>
  </div>
{% endblock %}
