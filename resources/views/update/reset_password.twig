{%extends 'templates/app.twig'%}
{% block content %}
<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
    <div class="panel-heading"><h3 class="text-center">Change Password</h3></div>
    <div class="panel-body">
      <form action="{{path_for('password.reset')}}?email={{email}}&recover_hash={{recover_hash | url_encode}}" method="post" autocomplete="off">
        <div class="form-group {{  errors.first('new') ? 'has-error':''}}">
          <label for="password">New Password</label>
          <input type="password" class="form-control" id="password" placeholder="password" name="password" >
           {% if errors.first('password') %}
          <span class="help-block">{{errors.first('password')}}</span>
          {% endif %}
        </div>
        <div class="form-group {{  errors.first('confirm') ? 'has-error':''}}">
          <label for="password_confirm">Confirm Password</label>
          <input type="password" class="form-control" id="password_confirm" placeholder="password" name="password_confirm" >
           {% if errors.first('password_confirm') %}
          <span class="help-block">{{errors.first('password_confirm')}}</span>
          {% endif %}
        </div>
        {{ csrf_field() | raw }}
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
</div>
</div>
</div>
{% endblock %}
