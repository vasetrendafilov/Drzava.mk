{%extends 'templates/app.twig'%}
{% block content %}
<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
    <div class="panel-heading"><h3 class="text-center">Change Password</h3></div>
    <div class="panel-body">
      <form action="{{path_for('password.change')}}" method="post" autocomplete="off">
        <div class="form-group  {{  errors.first('old') ? 'has-error':''}}">
          <label for="old">Old Password</label>
          <input type="password" class="form-control" id="old" placeholder="Old Password" name="old">
           {% if errors.first('old') %}
          <span class="help-block">{{errors.first('old')}}</span>
          {% endif %}
        </div>
        <div class="form-group {{  errors.first('new') ? 'has-error':''}}">
          <label for="new">New Password</label>
          <input type="password" class="form-control" id="new" placeholder="password" name="new" >
           {% if errors.first('new') %}
          <span class="help-block">{{errors.first('new')}}</span>
          {% endif %}
        </div>
        <div class="form-group {{  errors.first('confirm') ? 'has-error':''}}">
          <label for="confirm">Confirm Password</label>
          <input type="password" class="form-control" id="confirm" placeholder="password" name="confirm" >
           {% if errors.first('confirm') %}
          <span class="help-block">{{errors.first('confirm')}}</span>
          {% endif %}
        </div>
        {{ csrf_field() | raw }}
        <button type="submit" class="btn btn-default">Change</button>
      </form>
    </div>
</div>
</div>
</div>
{% endblock %}
