{%extends 'templates/app.twig'%}
{% block head %}
<link rel="stylesheet" href= "{{baseUrl}}/resources/css/update/profile.css">
{% endblock %}
{% block content %}
<div class="row ">
       <div class="col-md-4 col-md-offset-4">
           <div class="panel panel-default">
             <div class="panel-body">
               <h2>Profile</h2>
           </div>
           <div class="panel-body">
        <form action="{{path_for('update')}}" method="post" autocomplete="off">
        <div class="form-group">
          <label for="name">Име:</label>
          <input type="text"  id="name" value="{{user.name}}" name="name"/>
           {% if errors.first('name') %}
          <span class="help-block">{{errors.first('name')}}</span>
          {% endif %}
        </div>
        <div class="form-group ">
          <label for="school">Школо:</label>
          <input type="text"  id="school" value="{{user.school}}" name="school" />
           {% if errors.first('school') %}
          <span class="help-block">{{errors.first('school')}}</span>
          {% endif %}
        </div>
        <div class="form-group ">
          <label for="email">Емаил:</label><br>
          <label id="email">{{user.email}}</label>
        </div>
          <h2>Change Password</h2>
        </div>
        <div class="form-group">
          <input type="password"  id="password" placeholder="Стара Лозинка" name="password" >
           {% if errors.first('password') %}
          <span class="help-block">{{errors.first('password')}}</span>
          {% endif %}
        </div>
        <div class="form-group">
          <input type="password"  id="password_new" placeholder="Нова Лозинка" name="password_new" >
           {% if errors.first('password_new') %}
          <span class="help-block">{{errors.first('password_new')}}</span>
          {% endif %}
        </div>
        <div class="form-group">
          <input type="password"  id="password_confirm" placeholder="Потврди Лозинка" name="password_confirm" >
           {% if errors.first('password_confirm') %}
          <span class="help-block">{{errors.first('password_confirm')}}</span>
          {% endif %}
        </div>

      {{ csrf_field() | raw }}
    <button type="submit" class="hvr-buzz-out" >Update</button>
</form>
</div>
      </div>
      </div>
  </div>
{% endblock %}
