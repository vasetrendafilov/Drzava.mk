{%extends 'templates/app.twig'%}
{% block head %}
<link rel="stylesheet" href= "{{baseUrl}}/resources/css/auth/signin.css">
{% endblock %}
{% block content %}
<div class="row" id="margin">
       <div class="col-md-4 col-md-offset-4">
           <div class="panel panel-default">
             <div class="panel-body">
               <h2>Логин</h2>
           </div>
           <div class="panel-body">
        <form action="{{path_for('auth.signin')}}" method="post" autocomplete="off">
        <div class="form-group">
          <input type="text"  id="username" placeholder="Корисничко Име" name="username" value="{{ request.username }}"/>
        </div>
        <div class="form-group">
          <input type="password"  id="password" placeholder="Лозинка" name="password" >
        </div>
      {{ csrf_field() | raw }}
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" value="on" id="checkbox">
          Запомни Ме
        </label>
        <div id="fotgot_password">
        <a href="{{path_for('password.recover')}}">Заборави Лозинка?</a>
        </div>
    <button type="submit" class="hvr-buzz-out">Sign In</button>
</form>
</div>
      </div>
      </div>
  </div>
{% endblock %}
