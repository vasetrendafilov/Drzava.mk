{%extends 'templates/app.twig'%}
{% block head %}
<link rel="stylesheet" href= "{{baseUrl}}/resources/css/auth/signup.css">
{% endblock %}
{% block content %}
<div class="row ">
       <div class="col-md-4 col-md-offset-4">
           <div class="panel panel-default">
             <div class="panel-body">
               <h2>Регистрација</h2>
           </div>
           <div class="panel-body">
        <form action="{{path_for('auth.signup')}}" method="post" autocomplete="off">
        <div class="form-group  {{  errors.first('username') ? 'has-error':''}}">
          <input type="text"  id="username" placeholder="Корисничко Име" name="username" value="{{ request.username }}"/>
           {% if errors.first('username') %}
          <span class="help-block">{{errors.first('username')}}</span>
          {% endif %}
        </div>

        <div class="form-group {{  errors.first('email') ? 'has-error':''}}">
          <input type="email" id="email" placeholder="Емаил" name="email" value="{{ request.email }}">
          {% if errors.first('email') %}
          <span class="help-block">{{ errors.first('email') }}</span>
          {% endif %}
        </div>
        <div class="form-group {{  errors.first('password') ? 'has-error':''}}">
          <input type="password"  id="password" placeholder="Лозинка" name="password" >
           {% if errors.first('password') %}
          <span class="help-block">{{errors.first('password')}}</span>
          {% endif %}
        </div>
        <div class="form-group {{  errors.first('password_confirm') ? 'has-error':''}}">
          <input type="password"  id="password_confirm" placeholder="Потврди Лозинка" name="password_confirm" >
           {% if errors.first('password_confirm') %}
          <span class="help-block">{{errors.first('password_confirm')}}</span>
          {% endif %}
        </div>
        <div class="form-group  {{  errors.first('name') ? 'has-error':''}}">
          <input type="text"  id="name" placeholder="Име и Презиме" name="name" value="{{ request.name }}">
           {% if errors.first('name') %}
          <span class="help-block">{{errors.first('name')}}</span>
          {% endif %}
        </div>
        <div class="form-group  {{  errors.first('school') ? 'has-error':''}}">
          <input type="text"  id="school" placeholder="Школо" name="school" value="{{ request.name }}">
           {% if errors.first('school') %}
          <span class="help-block">{{errors.first('school')}}</span>
          {% endif %}
        </div>

      {{ csrf_field() | raw }}
      <div id="login">
        <a href="{{path_for('auth.signin')}}">Имаш акаунт ? Логирај Се</span>
    </div>
    <button type="submit" class="hvr-buzz-out" >Регистрација</button>
</form>
</div>
      </div>
      </div>
  </div>
{% endblock %}
